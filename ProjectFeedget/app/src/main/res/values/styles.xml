<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <!--Status Bar 배경색-->
        <item name="android:statusBarColor">#7f000000</item>
    </style>

    <style name="MainTabLayout" parent="Base.Widget.Design.TabLayout">
        <item name="tabTextAppearance">@style/MainTabTextAppearance</item>
    </style>

    <style name="MainTabTextAppearance" parent="TextAppearance.AppCompat.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#8f8f8f</item>
    </style>


</resources>
