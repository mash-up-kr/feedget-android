<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_registerBackButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="이전"
                />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:background="@color/white"
                ></View>

            <TextView
                android:id="@+id/textView_registerSubmitButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="완료"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@drawable/drop_shadow"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:background="@color/white"
            android:layout_margin="@dimen/margin_default"
            >
            


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지급 포인트"
                android:textStyle="bold"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginBottom="@dimen/margin_default"
                />


            <LinearLayout
                android:id="@+id/linearLayout_pointBlock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/textView_setPoint_10"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="10"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_20"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="20"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_30"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="30"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_40"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="40"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_50"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="50"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    >

                    <TextView
                        android:id="@+id/textView_setPoint_60"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="60"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_70"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="70"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_80"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="80"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_90"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="90"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />

                    <TextView
                        android:id="@+id/textView_setPoint_100"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="100"
                        android:gravity="center"
                        android:textSize="@dimen/textSize_default"
                        android:background="@drawable/point_button_stroke"
                        />


                </LinearLayout>
                
            </LinearLayout>
            


            <LinearLayout
                android:id="@+id/point_layout"
                android:layout_width="match_parent"
                android:layout_height="29dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >

                <EditText
                    android:id="@+id/EditText_setPointBar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:hint="0"
                    android:lines="1"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:layout_weight="1"
                    android:layout_gravity="bottom"
                    android:gravity="center_vertical"
                    android:ems="10"
                    android:inputType="number"
                    android:text="0"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="point"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:gravity="bottom"
                    />


            </LinearLayout>

            <View
                android:id="@+id/point_underBarLine"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="7dp"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="보유 포인트"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/textView_myPoint"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="14sp"
                    android:layout_marginLeft="8dp"
                    android:text="99,999,999"
                    android:textColor="@color/black"
                    android:gravity="center_vertical|left"
                    android:layout_weight="1"
                    />

                <CheckBox
                    android:id="@+id/checkBox_PointAllIn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="모두 걸기"
                    android:textSize="14sp"
                    android:gravity="center_vertical"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:text="닉네임 비공개"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    />

                <Switch
                    android:id="@+id/switch_isHideNickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />


            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</layout>
